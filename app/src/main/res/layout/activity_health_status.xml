<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_status"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/config_hidden"
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:background="@color/white"
        android:gravity="right|center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_shop"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginRight="35dp"
            android:src="@mipmap/ic_shop" />

        <ImageView
            android:id="@+id/img_scan"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginRight="35dp"
            android:src="@mipmap/scan" />

        <ImageView
            android:id="@+id/img_devices"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginRight="35dp"
            android:src="@mipmap/icon_devices" />

        <ImageView
            android:id="@+id/img_message"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginRight="35dp"
            android:src="@mipmap/message" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="120dp"
        android:background="@color/bebebeb_line" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/ll_1"
                layout="@layout/info_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                android:id="@+id/ll_4"
                layout="@layout/manbing_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <include
                android:id="@+id/ll_7"
                layout="@layout/zhengzhuang_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <include
                android:id="@+id/ll_6"
                layout="@layout/habit_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <include
                android:id="@+id/ll_3"
                layout="@layout/food_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <include
                android:id="@+id/ll_2"
                layout="@layout/warter_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <include
                android:id="@+id/ll_5"
                layout="@layout/jiancezhibiao_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <include
                android:id="@+id/ll_8"
                layout="@layout/medication_record_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="5px"
        android:background="#f7f7f7" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.flyco.roundview.RoundTextView
            android:id="@+id/rtv_next"
            android:layout_width="0px"
            android:layout_height="120px"
            android:layout_weight="1"
            android:layout_marginBottom="20px"
            android:layout_marginLeft="100px"
            android:layout_marginRight="100px"
            android:layout_marginTop="30px"
            android:gravity="center"
            android:padding="20px"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="42px"
            app:rv_backgroundColor="@color/deep_sky_blue"
            app:rv_backgroundPressColor="@color/white"
            app:rv_cornerRadius="5dp" />

        <com.flyco.roundview.RoundTextView
            android:id="@+id/rtv_next2"
            android:layout_width="0px"
            android:layout_height="120px"
            android:layout_weight="1"
            android:layout_marginBottom="20px"
            android:layout_marginLeft="100px"
            android:layout_marginRight="100px"
            android:layout_marginTop="30px"
            android:gravity="center"
            android:padding="20px"
            android:text="马上看结果"
            android:visibility="gone"
            android:textColor="@color/white"
            android:textSize="42px"
            app:rv_backgroundColor="@color/deep_sky_blue"
            app:rv_backgroundPressColor="@color/white"
            app:rv_cornerRadius="5dp"/>
    </LinearLayout>
</LinearLayout>
