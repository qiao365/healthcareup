<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="144px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:src="@mipmap/back_b" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:text="修改密码" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="130px"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请为您的账号 " />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置一个新密码 " />
    </LinearLayout>

    <EditText
        android:id="@+id/et_oldPwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px"
        android:layout_marginTop="60px"
        android:background="@drawable/edittext_bg_selector"
        android:hint="请输入原密码"
        android:paddingBottom="38px"
        android:paddingLeft="30px"
        android:paddingTop="30px"
        android:textColor="@color/black2"
        android:textColorHint="@color/warm_grey"
        android:textSize="42px" />

    <EditText
        android:id="@+id/et_newPwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px"
        android:background="@drawable/edittext_bg_selector"
        android:hint="请输入新密码"
        android:paddingBottom="38px"
        android:paddingLeft="30px"
        android:paddingTop="30px"
        android:textColor="@color/black2"
        android:textColorHint="@color/warm_grey"
        android:textSize="42px" />

    <com.flyco.roundview.RoundTextView
        android:id="@+id/rtv_ok"
        android:layout_width="match_parent"
        android:layout_height="128px"
        android:layout_gravity="center"
        android:layout_marginLeft="90px"
        android:layout_marginRight="90px"
        android:layout_marginTop="130px"
        android:gravity="center"
        android:text="完成注册"
        android:textColor="@color/white"
        android:textSize="48px"
        app:rv_backgroundColor="@color/deep_sky_blue"
        app:rv_backgroundPressColor="@color/white"
        app:rv_cornerRadius="15px"
        app:rv_textPressColor="@color/deep_sky_blue" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55px"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击上面完成注册按钮，即表示同意" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:text="《万物语联普通用户协议》"
            android:textColor="@color/blue1" />
    </LinearLayout>


</LinearLayout>
