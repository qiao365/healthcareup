<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@mipmap/back_b" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50px"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="15px"
            android:text="下一步"
            android:textColor="@color/deep_sky_blue"
            android:textSize="50px" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50px"
        android:text="注册"
        android:textColor="@color/black2"
        android:textSize="70px"
        tools:layout_editor_absoluteX="156dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="78px"
        android:layout_marginRight="78px"
        android:layout_marginTop="80px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="200px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35px"
            android:text="+86"
            android:paddingTop="30px"
            android:textColor="@color/black2"
            android:textSize="42px" />

        <EditText
            android:id="@+id/et_phoneNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bg_selector"
            android:hint="请输入您的手机号"
            android:paddingBottom="38px"
            android:paddingLeft="250px"
            android:paddingTop="30px"
            android:textColor="@color/black2"
            android:textColorHint="@color/warm_grey"
            android:textSize="42px" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="78px"
        android:layout_marginRight="78px"
        android:layout_marginTop="70px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="200px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35px"
            android:text="设置密码"
            android:paddingTop="30px"
            android:textColor="@color/black2"
            android:textSize="42px" />

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bg_selector"
            android:hint="为您的账号设置一个密码"
            android:digits="0123456789qwertyuioplkjhgfdsazxcvbnm"
            android:paddingBottom="38px"
            android:paddingTop="30px"
            android:paddingLeft="250px"
            android:textColor="@color/black2"
            android:textColorHint="@color/warm_grey"
            android:textSize="42px" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="78px"
        android:layout_marginRight="78px"
        android:layout_marginTop="70px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="200px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35px"
            android:text="确认密码"
            android:paddingTop="30px"
            android:textColor="@color/black2"
            android:textSize="42px" />

        <EditText
            android:id="@+id/et_pwd2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bg_selector"
            android:hint="请确认密码"
            android:paddingBottom="38px"
            android:paddingLeft="250px"
            android:paddingTop="30px"
            android:textColor="@color/black2"
            android:textColorHint="@color/warm_grey"
            android:textSize="42px" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100px"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="同意"
            style="@style/CustomCheckboxTheme"
            android:textSize="42px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《万物语联普通用户协议》"
            android:textColor="@color/deep_sky_blue"
            android:textSize="42px" />

    </LinearLayout>


</LinearLayout>
