<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:src="@mipmap/back_b" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50px"
        android:text="输入验证码"
        android:textColor="@color/black2"
        android:textSize="70px" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我们已向 "
            android:textColor="#676767"
            android:textSize="42px" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="153 **** 9269 "
            android:textColor="#363636"
            android:textSize="42px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送验证码短信，"
            android:textColor="#676767"
            android:textSize="42px" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10px"
        android:text="请查看短信并输入验证码"
        android:textColor="#676767"
        android:textSize="42px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100px"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_pw1"
            android:layout_width="140px"
            android:layout_height="140px"
            android:layout_marginRight="60px"
            android:background="@drawable/ed_rectangle"
            android:gravity="center"
            android:textColor="@color/black2"
            android:textSize="70px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_pw2"
            android:layout_width="140px"
            android:layout_height="140px"
            android:layout_marginRight="60px"
            android:background="@drawable/ed_rectangle"
            android:gravity="center"
            android:textColor="@color/black2"
            android:textSize="70px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_pw3"
            android:layout_width="140px"
            android:layout_height="140px"
            android:layout_marginRight="60px"
            android:background="@drawable/ed_rectangle"
            android:gravity="center"
            android:textColor="@color/black2"
            android:textSize="70px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_pw4"
            android:layout_width="140px"
            android:layout_height="140px"
            android:background="@drawable/ed_rectangle"
            android:gravity="center"
            android:textColor="@color/black2"
            android:textSize="70px"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100px"
        android:text="接收短信大约需要10秒"
        android:textColor="#676767"
        android:textSize="42px" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/jianpan"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_1"
                android:layout_width="235px"
                android:layout_height="140px"
                android:layout_marginTop="10px"
                android:onClick="onClick"
                android:text="1"
                android:textColor="@color/transparent" />

            <TextView
                android:id="@+id/tv_4"
                android:layout_width="235px"
                android:layout_height="140px"
                android:layout_marginTop="25px"
                android:onClick="onClick"
                android:text="4"
                android:textColor="@color/transparent" />

            <TextView
                android:id="@+id/tv_7"
                android:layout_width="235px"
                android:layout_height="140px"
                android:layout_marginTop="25px"
                android:onClick="onClick"
                android:text="7"
                android:textColor="@color/transparent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_2"
                android:layout_width="235px"
                android:layout_height="140px"
                android:layout_marginTop="10px"
                android:onClick="onClick"
                android:text="2"
                android:textColor="@color/transparent" />

            <TextView
                android:id="@+id/tv_5"
                android:layout_width="235px"
                android:layout_height="140px"
                android:layout_marginTop="25px"
                android:onClick="onClick"
                android:text="5"
                android:textColor="@color/transparent" />

            <TextView
                android:id="@+id/tv_8"
                android:layout_width="235px"
                android:layout_height="140px"
                android:layout_marginTop="25px"
                android:onClick="onClick"
                android:text="8"
                android:textColor="@color/transparent" />

            <TextView
                android:id="@+id/tv_0"
                android:layout_width="235px"
                android:layout_height="140px"
                android:layout_marginTop="25px"
                android:onClick="onClick"
                android:text="0"
                android:textColor="@color/transparent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_3"
                android:layout_width="235px"
                android:layout_height="140px"
                android:layout_marginTop="10px"
                android:onClick="onClick"
                android:text="3"
                android:textColor="@color/transparent" />

            <TextView
                android:id="@+id/tv_6"
                android:layout_width="235px"
                android:layout_height="140px"
                android:layout_marginTop="20px"
                android:onClick="onClick"
                android:text="6"
                android:textColor="@color/transparent" />

            <TextView
                android:id="@+id/tv_9"
                android:layout_width="235px"
                android:layout_height="140px"
                android:layout_marginTop="25px"
                android:onClick="onClick"
                android:text="9"
                android:textColor="@color/transparent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_del"
                android:layout_width="235px"
                android:layout_height="140px"
                android:layout_marginTop="10px"
                android:onClick="onClick" />

            <TextView
                android:id="@+id/tv_ok"
                android:layout_width="235px"
                android:layout_height="300px"
                android:layout_marginTop="185px"
                android:onClick="onClick" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
