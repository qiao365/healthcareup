<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110px"
        android:layout_marginTop="130px"
        android:text="吃饭记录"
        android:textColor="@color/font_grey"
        android:textSize="68px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110px"
        android:layout_marginTop="65px"
        android:text="点击饼图调整比例"
        android:textColor="@color/grey_4d5764"
        android:textSize="50px" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="850px"
        android:layout_marginTop="160px">

        <View
            android:layout_width="5px"
            android:layout_height="match_parent"
            android:layout_marginLeft="115px"
            android:background="#ffc47c" />


        <CheckBox
            android:id="@+id/cbx_11"
            style="@style/CustomCheckboxTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180px"
            android:text="正常早饭"
            android:textColor="@color/font_grey"
            android:textSize="50px" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChart"
            android:layout_width="650px"
            android:layout_height="650px"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="245px"
            android:layout_marginTop="130px" />

        <TextView
            android:id="@+id/tv_center_1"
            android:layout_width="200px"
            android:layout_height="200px"
            android:layout_alignBottom="@id/pieChart"
            android:layout_marginBottom="220px"
            android:layout_marginLeft="460px"
            android:gravity="center" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="850px"
        android:layout_marginTop="160px">

        <View
            android:layout_width="5px"
            android:layout_height="match_parent"
            android:layout_marginLeft="115px"
            android:background="#1ed321" />

        <CheckBox
            android:id="@+id/cbx_22"
            style="@style/CustomCheckboxTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180px"
            android:text="正常午饭"
            android:textColor="@color/font_grey"
            android:textSize="50px" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChart_2"
            android:layout_width="650px"
            android:layout_height="650px"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="245px"
            android:layout_marginTop="130px" />

        <TextView
            android:id="@+id/tv_center_2"
            android:layout_width="200px"
            android:layout_height="200px"
            android:layout_alignBottom="@id/pieChart_2"
            android:layout_marginBottom="220px"
            android:layout_marginLeft="460px"
            android:gravity="center" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="850px"
        android:layout_marginTop="160px">

        <View
            android:layout_width="5px"
            android:layout_height="match_parent"
            android:layout_marginLeft="115px"
            android:background="#845999" />

        <CheckBox
            android:id="@+id/cbx_33"
            style="@style/CustomCheckboxTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180px"
            android:text="正常晚饭"
            android:textColor="@color/font_grey"
            android:textSize="50px" />

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChart_3"
            android:layout_width="650px"
            android:layout_height="650px"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="245px"
            android:layout_marginTop="130px" />

        <TextView
            android:id="@+id/tv_center_3"
            android:layout_width="200px"
            android:layout_height="200px"
            android:layout_alignBottom="@id/pieChart_3"
            android:layout_marginBottom="220px"
            android:layout_marginLeft="460px"
            android:gravity="center" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="195px"
        android:text="每天油盐摄取情况"
        android:textColor="@color/black_text" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="62px"
        android:background="@color/divider_line" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130px"
        android:layout_marginTop="95px"
        android:text="摄入盐量" />

    <SeekBar
        android:id="@+id/seek_bar_yan"
        style="@style/Widget.SeekBar.Normal"
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:layout_marginLeft="70px"
        android:layout_marginRight="70px"
        android:layout_marginTop="30px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130px"
        android:layout_marginRight="130px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="少盐" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重盐" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130px"
        android:layout_marginTop="50px"
        android:text="摄入油量" />

    <SeekBar
        android:id="@+id/seek_bar_you"
        style="@style/Widget.SeekBar.Normal"
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:layout_marginLeft="70px"
        android:layout_marginRight="70px"
        android:layout_marginTop="30px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130px"
        android:layout_marginRight="130px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="少油" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100px"
            android:text="重油" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110px"
        android:layout_marginTop="130px"
        android:text="特殊饮食"
        android:textColor="@color/font_grey"
        android:textSize="60px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130px"
        android:layout_marginTop="50px"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="高嘌呤食物（海鲜、动物内脏、香菇等）"
        android:textSize="50px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="100px"
        android:paddingRight="100px">

        <EditText
            android:id="@+id/et_gao"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/edittext_bg_selector"
            android:gravity="center_horizontal"
            android:inputType="number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:text="g"
            android:textSize="50px" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130px"
        android:layout_marginTop="50px"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="中嘌呤食物 （大部分肉类、豆制品等）"
        android:textSize="50px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="100px"
        android:paddingRight="100px">

        <EditText
            android:id="@+id/et_zhong"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/edittext_bg_selector"
            android:gravity="center_horizontal"
            android:inputType="number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:text="g"
            android:textSize="50px" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130px"
        android:layout_marginTop="50px"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="低嘌呤食物（大部分蔬菜）"
        android:textSize="50px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="100px"
        android:paddingRight="100px">

        <EditText
            android:id="@+id/et_di"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/edittext_bg_selector"
            android:gravity="center_horizontal"
            android:inputType="number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:text="g"
            android:textSize="50px" />
    </LinearLayout>

</LinearLayout>