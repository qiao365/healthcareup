<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="73px"
        android:text="您现在觉得怎么样？"
        android:textColor="@color/color_4f4f6f"
        android:textSize="60px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="64px"
        android:layout_marginTop="20px"
        android:text="让我们共同分析一下您的状态吧"
        android:textColor="@color/color_4f4f6f"
        android:textSize="60px" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="75px"
        android:background="@color/border_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="80px">

        <ImageView
            android:layout_width="20px"
            android:layout_height="20px"
            android:layout_marginRight="40px"
            android:src="@mipmap/dot_green" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="现在的症状"
            android:textColor="@color/font_grey"
            android:textSize="65px" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_zhengzhuang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100px"
        android:orientation="vertical"
        android:visibility="gone">

        <CheckBox
            style="@style/CustomCheckboxTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="65px"
            android:layout_marginLeft="110px"
            android:layout_weight="1"
            android:paddingLeft="110px"
            android:text="头晕"
            android:textColor="@color/font_grey"
            android:textSize="50px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="75px"
            android:background="@color/border_line" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100px"
        android:orientation="vertical"
        android:visibility="gone">

        <CheckBox
            style="@style/CustomCheckboxTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="65px"
            android:layout_marginLeft="110px"
            android:layout_weight="1"
            android:paddingLeft="110px"
            android:text="头痛"
            android:textColor="@color/font_grey"
            android:textSize="50px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="75px"
            android:background="@color/border_line" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100px"
        android:orientation="vertical"
        android:visibility="gone">

        <CheckBox
            style="@style/CustomCheckboxTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="65px"
            android:layout_marginLeft="110px"
            android:layout_weight="1"
            android:paddingLeft="110px"
            android:text="恶心"
            android:textColor="@color/font_grey"
            android:textSize="50px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="75px"
            android:background="@color/border_line" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100px"
        android:orientation="vertical"
        android:visibility="gone">

        <CheckBox
            style="@style/CustomCheckboxTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="65px"
            android:layout_marginLeft="110px"
            android:layout_weight="1"
            android:paddingLeft="110px"
            android:text="呕吐"
            android:textColor="@color/font_grey"
            android:textSize="50px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="75px"
            android:background="@color/border_line" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_add_zhengzhuang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="100px"
        android:layout_marginTop="100px"
        android:padding="20px"
        android:text="十 增加新的状态"
        android:textColor="@color/deep_sky_blue" />

</LinearLayout>