<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@mipmap/back_b" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:layout_marginLeft="125px"
        android:gravity="center_vertical"
        android:paddingLeft="125px"
        android:text="拖动调整饮食摄取比例"
        android:textColor="@color/font_grey"
        android:textSize="56px" />

    <View
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:background="@mipmap/ic_shadow" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cbx_1"
            style="@style/CustomCheckboxTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120px"
            android:checked="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="20px"
            android:padding="25px">

            <SeekBar
                android:id="@+id/seek_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:progressDrawable="@color/transparent"
                android:thumb="@null" />

            <com.flyco.roundview.RoundTextView
                android:id="@+id/rtv_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:rv_backgroundColor="#e5f6ec"
                app:rv_cornerRadius="15px" />

            <TextView
                android:id="@+id/tv_zs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:layout_marginTop="25px"
                android:text="主食"
                android:textColor="@color/text_color"
                android:textSize="43px" />

            <TextView
                android:id="@+id/tv_ps_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_zs"
                android:layout_marginLeft="20px"
                android:layout_toRightOf="@id/tv_zs"
                android:textColor="@color/font_grey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_zs"
                android:layout_marginLeft="40px"
                android:layout_marginTop="25px"
                android:text="大米,面食等"
                android:textColor="#56c987" />
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="75px"
        android:background="@color/border_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cbx_2"
            style="@style/CustomCheckboxTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120px"
            android:checked="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="20px"
            android:padding="25px">

            <SeekBar
                android:id="@+id/seek_bar_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:progressDrawable="@color/transparent"
                android:thumb="@null" />

            <com.flyco.roundview.RoundTextView
                android:id="@+id/rtv_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:rv_backgroundColor="#e5f6ec"
                app:rv_cornerRadius="15px" />

            <TextView
                android:id="@+id/tv_rd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:layout_marginTop="25px"
                android:text="肉蛋"
                android:textColor="@color/text_color"
                android:textSize="43px" />

            <TextView
                android:id="@+id/tv_ps_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_rd"
                android:layout_marginLeft="30px"
                android:layout_toRightOf="@id/tv_rd"
                android:textColor="@color/font_grey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_rd"
                android:layout_marginLeft="40px"
                android:layout_marginTop="25px"
                android:text="肉类，蛋类等"
                android:textColor="#56c987" />


        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="75px"
        android:background="@color/border_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cbx_3"
            style="@style/CustomCheckboxTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120px"
            android:checked="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="20px"
            android:padding="25px">

            <SeekBar
                android:id="@+id/seek_bar_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:progressDrawable="@color/transparent"
                android:thumb="@null" />

            <com.flyco.roundview.RoundTextView
                android:id="@+id/rtv_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:rv_backgroundColor="#e5f6ec"
                app:rv_cornerRadius="15px" />

            <TextView
                android:id="@+id/tv_sc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:layout_marginTop="25px"
                android:text="蔬菜"
                android:textColor="@color/text_color"
                android:textSize="43px" />

            <TextView
                android:id="@+id/tv_ps_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_sc"
                android:layout_marginLeft="20px"
                android:layout_toRightOf="@id/tv_sc"
                android:textColor="@color/font_grey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_sc"
                android:layout_marginLeft="40px"
                android:layout_marginTop="25px"
                android:text="叶菜"
                android:textColor="#56c987" />
        </RelativeLayout>
    </LinearLayout>

    <com.flyco.roundview.RoundTextView
        android:id="@+id/rtv_ok"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_marginBottom="20px"
        android:layout_marginLeft="100px"
        android:layout_marginRight="100px"
        android:layout_marginTop="150px"
        android:gravity="center"
        android:padding="20px"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="42px"
        app:rv_backgroundColor="@color/deep_sky_blue"
        app:rv_backgroundPressColor="@color/deep_sky_blue"
        app:rv_cornerRadius="5dp" />

</LinearLayout>
