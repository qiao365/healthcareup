<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="right"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_shop"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="right"
            android:layout_marginRight="35dp"
            android:layout_marginTop="13dp"
            android:src="@mipmap/ic_shop" />

        <ImageView
            android:id="@+id/img_scan"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="right"
            android:layout_marginRight="35dp"
            android:layout_marginTop="13dp"
            android:src="@mipmap/scan" />

        <ImageView
            android:id="@+id/img_devices"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="right"
            android:layout_marginRight="35dp"
            android:layout_marginTop="13dp"
            android:src="@mipmap/icon_devices" />

        <ImageView
            android:id="@+id/img_message"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="right"
            android:layout_marginRight="35dp"
            android:layout_marginTop="13dp"
            android:src="@mipmap/message" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="120dp"
        android:background="@color/bebebeb_line" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp">


                <ImageView
                    android:id="@+id/avatar"
                    android:layout_width="70dp"
                    android:layout_height="80dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="32.5dp"
                    android:src="@mipmap/avatar" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/avatar"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="张晓彬"
                    android:textColor="@color/color_4f4f6f"
                    android:textSize="23sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/avatar"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15px"
                        android:layout_height="15px"
                        android:scaleType="fitXY"
                        android:src="@mipmap/dot_green" />

                    <TextView
                        android:id="@+id/location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:text="早上好！您现在定位为 "
                        android:textColor="@color/color_88889c"
                        android:textSize="12sp" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/more"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:padding="5dp"
                    android:src="@mipmap/more" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32.5dp"
                android:layout_marginTop="20dp"
                android:text="我们为您提供了以下服务"
                android:textColor="@color/cccccc"
                android:textSize="12sp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="24.5dp"
                android:layout_marginRight="24.5dp"
                android:layout_marginTop="19dp"
                android:background="@color/bebebeb_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24.5dp"
                android:layout_marginRight="24.5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_consult"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@mipmap/zixun" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:text="咨询"
                        android:textColor="@color/color_9b9b9b" />


                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/bebebeb_line" />

                <LinearLayout
                    android:id="@+id/ll_query"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:scaleType="fitXY"
                        android:src="@mipmap/shaixuan" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:text="筛查"
                        android:textColor="@color/color_9b9b9b" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/bebebeb_line" />

                <LinearLayout
                    android:id="@+id/ll_evaluate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp">


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@mipmap/fengxian" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:text="风险评估"
                        android:textColor="@color/color_9b9b9b" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="24.5dp"
                android:layout_marginRight="24.5dp"
                android:background="@color/bebebeb_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/mLayout01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100px"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/oval" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="60px"
                        android:text="告诉我您的健康状态，我和您一起守护健康"
                        android:textColor="@color/color_c1c1c1"
                        android:textSize="35px" />

                    <com.flyco.roundview.RoundTextView
                        android:id="@+id/rtv_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="100px"
                        android:padding="30px"
                        android:text="说说我的健康状况"
                        android:textColor="@color/white"
                        android:textSize="42px"
                        app:rv_backgroundColor="@color/color_7c80dc"
                        app:rv_backgroundPressColor="@color/white"
                        app:rv_cornerRadius="3dp" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/mLayout02"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true">

                    <TextView
                        android:id="@+id/mtv01"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="24.5dp"
                        android:layout_marginTop="16dp"
                        android:text="填写最新的健康信息"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/mTvotoPG"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mtv01"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="34.5dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/color_7c80dc"
                        android:paddingBottom="5dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="5dp"
                        android:text="去评估"
                        android:textColor="@android:color/white"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/mTvGotoHeath"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/mTvotoPG"
                        android:layout_alignBottom="@+id/mTvotoPG"
                        android:layout_alignEnd="@+id/textView"
                        android:layout_alignRight="@+id/textView"
                        android:layout_marginEnd="30dp"
                        android:layout_marginRight="30dp"
                        android:text="填写健康信息"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:id="@+id/layout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mTvotoPG"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/nLayoutPress01"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/img01"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:background="@mipmap/zhuyi_1080" />

                            <TextView
                                android:id="@+id/mTv01"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="健康提醒"
                                android:textColor="@color/grey_text2"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/nLayoutPress02"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/img02"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dp"
                                android:visibility="gone"
                                android:background="@mipmap/zhuyi_1080" />

                            <TextView
                                android:id="@+id/mTv02"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/grey_text3"
                                android:text="生活风险提醒"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:id="@+id/line"
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:layout_below="@+id/layout2"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/bebebeb_line" />

                    <TextView
                        android:id="@+id/tvContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="80dp"
                        android:layout_below="@+id/line"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:text="暂无数据"
                        android:textColor="@color/grey_aeb3b8" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/tvContent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:text="查看更多"
                        android:textColor="@color/grey_text3" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
